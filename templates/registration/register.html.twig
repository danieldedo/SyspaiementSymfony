{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                
                    {% if 
                        form_errors(form.username) or 
                        form_errors(form.email) or 
                        form_errors(form.plainPassword.first) or 
                        form_errors(form.genre) or 
                        form_errors(form.agreeTerms) 
                    %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(form.nom) }}
                            {{ form_errors(form.prenom) }}
                            {{ form_errors(form.email) }}
                            {{ form_errors(form.plainPassword.first) }}
                            {{ form_errors(form.genre) }}
                            {{ form_errors(form.agreeTerms) }}
                        </div>
                    {% endif %}
                    
                   
                  
                    {{ form_start(form) }}
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <div class="row">
                            <div class="col-12 mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(form.username,{'attr': {'class': 'form-control' }}) }}
                                    {{ form_label(form.username) }}
                                    {# <input type="text" id="form3Example1c" class="form-control" /> #}
                                    {# <label class="form-label" for="form3Example1c">Your Name</label> #}
                                </div>
                            </div>
    
                            <div class="col-6 mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(form.email,{'attr': {'class': 'form-control' }}) }}
                                    {{ form_label(form.email)}}
                                    {# <input type="email" id="form3Example3c" class="form-control" /> #}
                                    {# <label class="form-label" for="form3Example3c">Your Email</label> #}
                                </div>
                            </div>
    
                            <div class="col-6 mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(form.plainPassword.first) }}
                                    {{ form_label(form.plainPassword.first) }}
                                    {# <input type="plainPassword" id="form3Example4c" class="form-control" /> #}
                                    {# <label class="form-label" for="form3Example4c">Password</label> #}
                                </div>
                            </div>
    
                            <div class="col-6 mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(form.plainPassword.second) }}
                                    {{ form_label(form.plainPassword.second) }}
                                    {# <input type="password" id="form3Example4cd" class="form-control" />
                                    <label class="form-label" for="form3Example4cd">Repeat your password</label> #}
                                </div>
                            </div>

                            <div class="col-6 mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(form.genre) }}
                                    {{ form_label(form.genre) }}
                                    {# <input type="password" id="form3Example4cd" class="form-control" />
                                    <label class="form-label" for="form3Example4cd">Repeat your password</label> #}
                                </div>
                            </div>
    
                            <div class="form-check d-flex justify-content-center mb-5">
                                {{ form_widget(form.agreeTerms,{'attr': {'class': 'form-check-input me-2' }}) }}
                                {# {{ form_label(form.agreeTerms,{'attr': {'class': 'form-check-label' }}) }} #}
                                {# <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" /> #}
                                <label class="form-check-label" for="form2Example3">
                                I agree all statements in <a href="#!">Terms of service</a>
                                </label>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-lg-5">Register</button>
                        </div>

                    {{ form_end(form) }}
                </div>
                
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
    </section>

{% endblock %}
